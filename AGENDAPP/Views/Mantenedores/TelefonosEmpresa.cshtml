<link href="~/Assets/plugins/colorpicker/bootstrap-colorpicker.css" rel="stylesheet" />
<link href="~/Assets/plugins/DataTables/datatables.css" rel="stylesheet" />
@{
	ViewBag.Title = "TelefonosEmpresa";
}

<div class="container-fluid">


	<div class="row">
		<div class="col-lg-12">
			<h2 class="page-header mt-0">Administración de Teléfonos de Empresa</h2>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<div class="panel panel-default">
				<div class="panel-heading">
					<button style="margin-right:10px" class="float-right d-inline-block btn btn-sm btn-outline-primary" id="AddTelefono" data-container="body" data-toggle="popover" data-trigger="hover" data-placement="top" data-content="Agregar nuevo Telefono" data-original-title="" title=""><i class="fa fa-plus"></i></button>
					Teléfonos Registrados <br><small>Lista</small>

				</div>
				<div class="panel-body">
					<table class="table table-hover table-striped table-borderless table-bordered text-center" style="width:100%" id="tabla_Telefono">
						<thead>
							<tr>
								<th>Tipo de Telefono</th>
								<th>Numero</th>
								<th>Principal</th>
								<th>Comentario</th>
								<th>Fecha Creacion</th>
								<th>Fecha Edicion</th>
								<th>Estado</th>
								<th>Acción</th>
							</tr>
						</thead>
						<tbody id=""></tbody>
					</table>

				</div>
			</div>
		</div>
	</div>
	<!-- I:Modal Crear -->
	<div class="modal fade" id="mdlCrear" tabindex="-1" role="dialog" aria-labelledby="mdlCrearLabel">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
					<h4 class="modal-title" id="myModalLabel">
						<span class="glyphicon glyphicon-plus-sign"></span> Crear Teléfono
					</h4>
				</div>
				<div class="modal-body">
					<form class="form-horizontal interline5 sub">
		
						<div class="col-md-12 mb-3">
							<label for="Nombre_Color">Tipo Telefono</label>
							<select class="form-control" id="txtTelefono">
								<option class="bs-title-option" value="">Tipo Teléfono...</option>
								<option value="Casa">Casa</option>
								<option value="Trabajo">Trabajo</option>
								<option value="Movil">Movil</option>
							</select>
						</div>
						<div class="form-group">
							<label class="col-md-4 col-sm-4 col-xs-4 control-label" for="txtCodigo">Código:</label>
							<div class="col-md-8 col-sm-8 col-xs-8">
								<input type="text" class="form-control" id="txtCodigo" value="" required="">
							</div>
						</div>
						<div class="form-group">
							<label class="col-md-4 col-sm-4 col-xs-4 control-label" for="txtNumero">Número:</label>
							<div class="col-md-8 col-sm-8 col-xs-8">
								<input type="text" class="form-control" id="txtNumero" value="" required="">
							</div>
						</div>
						<div class="form-group">
							<label class="col-md-4 col-sm-4 col-xs-4 control-label" for="txtComentario">Comentario:</label>
							<div class="col-md-8 col-sm-8 col-xs-8">
								<input type="text" class="form-control" id="txtComentario" value="" required="">
							</div>
						</div>
						<div class="col-md-12 mb-3">
							<label for="Nombre_Color">Principal</label>
							<select class="form-control" id="txtPrincipal">
								<option class="bs-title-option" value="">Selecione Principal...</option>	
								<option value="1">Si</option>
								<option value="2">No</option>
							</select>
						</div>
					</form>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
					<button type="button" class="btn btn-primary" id="BtnGuardarTelefono"><span class="glyphicon glyphicon-floppy-disk"></span> Guardar</button>
				</div>
			</div>
		</div>
	</div>
	<!-- F:Modal Crear -->
	<!-- I:Modal Editar -->
	<div class="modal fade" id="mdlEditar" tabindex="-1" role="dialog" aria-labelledby="mdlEditaroLabel">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
					<h4 class="modal-title" id="myModalLabel">
						<span class="glyphicon glyphicon-pencil"></span> Editar Teléfono
					</h4>
				</div>
				<div class="modal-body">
					<form class="form-horizontal interline5 sub">
						<div class="col-md-12 mb-3">
							<label for="Nombre_Color">Tipo Telefono</label>
							<select class="form-control" id="txtMTelefono">
								<option class="bs-title-option" value="">Tipo Teléfono...</option>
								<option value="Casa">Casa</option>
								<option value="Trabajo">Trabajo</option>
								<option value="Movil">Movil</option>
							</select>
						</div>
						<div class="form-group">
							<label class="col-md-4 col-sm-4 col-xs-4 control-label" for="txtCodigo">Código:</label>
							<div class="col-md-8 col-sm-8 col-xs-8">
								<input type="text" class="form-control" id="txtMCodigo" value="" required="">
							</div>
						</div>
						<div class="form-group">
							<label class="col-md-4 col-sm-4 col-xs-4 control-label" for="txtNumero">Número:</label>
							<div class="col-md-8 col-sm-8 col-xs-8">
								<input type="text" class="form-control" id="txtMNumero" value="" required="">
							</div>
						</div>
						<div class="form-group">
							<label class="col-md-4 col-sm-4 col-xs-4 control-label" for="txtComentario">Comentario:</label>
							<div class="col-md-8 col-sm-8 col-xs-8">
								<input type="text" class="form-control" id="txtMComentario" value="" required="">
							</div>
						</div>
						<div class="col-md-12 mb-3">
							<label for="Nombre_Color">Principal</label>
							<select class="form-control" id="txtMPrincipal">
								<option class="bs-title-option" value="">Selecione Principal...</option>
								<option value="1">Si</option>
								<option value="2">No</option>
							</select>
						</div>
						<div class="col-md-12 mb-3">
							<label for="Nombre_Color">Estado</label>
							<select class="form-control" id="Mestado">
								<option value="1">Activo</option>
								<option value="2">Inactivo</option>
							</select>
						</div>
					</form>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
					<button type="button" class="btn btn-primary" id="BtnModificarTelefono"><span class="glyphicon glyphicon-floppy-disk"></span> Guardar</button>
				</div>
			</div>
		</div>
	</div>
	<!-- F:Modal Editar -->
	<!-- I:Modal Crear-->

	<!-- F:Modal Crear-->
	@section scripts{
		<script src="~/ActionJs/jquery.min.js"></script>
		<script src="~/Assets/plugins/DataTables/datatables.js"></script>
		<script src="~/ActionJs/Mantenedores/Telefono.js"></script>
	}






	<!-- /.row -->
</div>

