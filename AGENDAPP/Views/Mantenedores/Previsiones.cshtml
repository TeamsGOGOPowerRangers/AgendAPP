<link href="~/Assets/plugins/colorpicker/bootstrap-colorpicker.css" rel="stylesheet" />
<link href="~/Assets/plugins/DataTables/datatables.css" rel="stylesheet" />
@{
	ViewBag.Title = "Ocupaciones";
}

<div class="container-fluid">

	<div class="row">
		<div class="col-lg-12">
			<h2 class="page-header mt-0">Administración de Previsiones</h2>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<div class="panel panel-default">
				<div class="panel-heading">
					<button style="margin-right:10px" class="float-right d-inline-block btn btn-sm btn-outline-primary" id="AddPrevisiones" data-container="body" data-toggle="popover" data-trigger="hover" data-placement="top" data-content="Agregar Prevision" data-original-title="" title=""><i class="fa fa-plus"></i></button>
					Previsiones Registradas <br><small>Lista</small>

				</div>
				<div class="panel-body">
					<table class="table table-hover table-striped table-borderless table-bordered text-center" style="width:100%" id="tabla_Prevision">
						<thead>
							<tr>
								<th>Nombre</th>
								<th>Descripcion</th>
								<th>Fecha Creacion</th>
								<th>Fecha Edicion</th>
								<th>Estado</th>
								<th>Acción</th>
							</tr>
						</thead>
						<tbody id=""></tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
	<!-- I:Modal Crear -->
	<div class="modal fade" id="mdlCrear" tabindex="-1" role="dialog" aria-labelledby="mdlCrearLabel" style="display: none;">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h4 class="modal-title" id="myModalLabel">
						<span class="glyphicon glyphicon-plus-sign"></span> Crear Prevision
					</h4>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>

				</div>
				<div class="modal-body">
					<form class="form-horizontal interline5 sub" novalidate="true">
						<div class="form-group">
							<label class="col-md-4 col-sm-4 col-xs-4 control-label" for="txtNombre">Nombre:</label>
							<div class="col-md-8 col-sm-8 col-xs-8">
								<input type="text" class="form-control" id="txtNombre" value="" required="">
							</div>
						</div>
						<div class="form-group">
							<label class="col-md-4 col-sm-4 col-xs-4 control-label" for="txtDescripcion">Descripción:</label>
							<div class="col-md-8 col-sm-8 col-xs-8">
								<textarea id="txtDescripcion" class="form-control" rows="4" required="" maxlength="250"></textarea>
							</div>
						</div>
					</form>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
					<button type="button" class="btn btn-primary" id="BtnGuardarPrevision"><span class="glyphicon glyphicon-floppy-disk"></span> Guardar</button>
				</div>
			</div>
		</div>
	</div>
	<!-- F:Modal Crear -->
	<!-- I:Modal Editar -->
	<div class="modal fade" id="mdlEditar" tabindex="-1" role="dialog" aria-labelledby="mdlEditarLabel">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h4 class="modal-title" id="myModalLabel">
						<span class="glyphicon glyphicon-pencil"></span> Editar Prevision
					</h4>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>

				</div>
				<div class="modal-body">
					<form class="form-horizontal interline5 sub">
						<input type="hidden" id="id" value="">
						<div class="form-group">
							<label class="col-md-4 col-sm-4 col-xs-4 control-label" for="txtNombre">Nombre:</label>
							<div class="col-md-8 col-sm-8 col-xs-8">
								<input type="text" class="form-control" id="txtMNombre" value="" required="">
							</div>
						</div>
						<div class="form-group">
							<label class="col-md-4 col-sm-4 col-xs-4 control-label" for="txtDescripcion">Descripción:</label>
							<div class="col-md-8 col-sm-8 col-xs-8">
								<textarea id="txtMDescripcion" class="form-control" rows="4" required="" maxlength="250"></textarea>
							</div>
						</div>

						<div class="col-md-12 mb-3">
							<label for="Nombre_Color">Estado</label>
							<select class="form-control" id="MEstado">
								<option value="1">Activo</option>
								<option value="2">Inactivo</option>
							</select>
						</div>
					</form>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
					<button type="button" class="btn btn-primary" id="BtnModificarPrevision"><span class="glyphicon glyphicon-floppy-disk"></span> Guardar</button>
				</div>
			</div>
		</div>
	</div>

	<!-- F:Modal Editar -->
	@section scripts{
		<script src="~/ActionJs/jquery.min.js"></script>
		<script src="~/Assets/plugins/DataTables/datatables.js"></script>
		<script src="~/Assets/plugins/colorpicker/bootstrap-colorpicker.js"></script>
		<script src="~/ActionJs/Mantenedores/Prevision.js"></script>

	}


	<!-- /.row -->
</div>
