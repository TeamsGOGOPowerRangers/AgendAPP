
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Login</title>
	<link href="~/CssPages/Login/Logincss.css" rel="stylesheet" />
	<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
	<div class="contenido">
		<div class="degrades">
			<img class="fondo" src="/img/fondo.svg">
		</div>		
		<div class="Svg">
			<img class="logo" src="~/img/logoMPSS.svg" />
		</div>
		<div class="divSup"></div>
		<div class="divInf"></div>
		<div class="image">
			<img src="/img/agenda.svg">
		</div>
		<div class="Card-Login">
			<div class="container-fuild">
				<div class="row">
					<div class="col-md-12">
						<div class="form-group">
							<div class="col-md-12">
								<h2 class="lead text-center" style="color: white;">
									Ingresa a tu
									portal
								</h2>

							</div>
						</div>
						<br>
						<form class="kt-form">

							<div class="row justify-content-start">
								<div class="col-lg-12 col-md-12 col-sm-12">
									<div class="card">
										<div class="py-2 ml-3">
											<div class="form-group">

												<div class="kt-radio-inline">
													<label class="kt-radio">
														<input type="radio" value="1" name="pasaporte_check" id="rut_check" onkeypress="nextel(event)">
														Rut
														<span></span>
													</label>
													<label class="kt-radio">
														<input type="radio" value="2" name="pasaporte_check" id="pasaporte_radio" onkeypress="nextel(event)">
														Pasaporte
														<span></span>
													</label>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
							<div class="ml-2 row mt-1">
								<div class="col-md-12">
									<div id="rut_validar">
										<div class="form-group">
											<div class="input-group ">
												<label for="rut">Rut</label>
												<div class="input-group">
													<div class="input-group-prepend">
														<span class="input-group-text">
															<i class="fas fa-user"></i>
														</span>
													</div>
													<input style="font-size:17px" type="text" placeholder="12345678-9                                                                                             *" aria-describedby="basic-addon1" id="rut" class="form-control " name="rut" value="" autocomplete="off" autofocus="" oninput="checkRut(this)" onkeypress="return soloNumeros(event)" maxlength="10" onkeydown="enterTab(event)" minlength="9">
												</div>
											</div>
										</div>
									</div>

									<div id="pasaporte_validar">
										<div class="form-group">
											<label for="pasaporte">Pasaporte</label>
											<div class="input-group ">
												<div class="input-group">
													<div class="input-group-prepend">
														<span class="input-group-text">
															<i class="fas fa-user"></i>
														</span>
													</div>
													<input style="font-size:17px" type="text" placeholder="Pasaporte                                                                                              *" class="form-control " name="pasaporte" value="" autocomplete="off">
												</div>
											</div>
										</div>
									</div>
								</div>
							</div><br>
							<div class="ml-2 row">
								<div class="col-md-12">
									<div class="form-group">
										<div class="input-group">
											<label for="rut">Contraseña</label>
											<div class="input-group">
												<div class="input-group-prepend">
													<span class="input-group-text">
														<i class="fas fa-lock"></i>
													</span>
												</div>
												<input style="font-size:17px" type="password" aria-describedby="basic-addon1" id="password" placeholder="Contraseña                                                                                           *" class="form-control " name="password" required="" autocomplete="off">
											</div>
										</div>
									</div>
								</div>
							</div>

							<div class="row ">
								<div class="col-md-12">
									<div class="form-group px-5">
										<button id="Ingresar" class="btn btn-info btn-pill col-sm-12 btn-sm">
											Ingresar
										</button>
									</div>
								</div>
							</div><br>
						</form>
						<div class="row">
							<div class="col-md-12">
								<div class="form-group text-center">
									<a href="/RecuperarContrasena" class="kt-link" style="color: #ffffff;">
										¿Olvidaste
										tu
										contraseña?
									</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="container-fuild">
				<div class="row">
					<div class="col-sm-12">
						<div class="form-group ">
							<div class="form-group mx-auto">
								<span class="" style="color:gray;">
									¿No eres usuario? Regístrate ahora
								</span>
							</div>
						</div>
					</div>
					<div class="col-sm-12">
						<div class="form-group px-5">
							<a href="/Login/RegistroUsuario" class="mx-auto btn btn-primary btn-sm btn-pill col-sm-12">
								<p class="mb-0">Crear cuenta</p>
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<script src="~/Scripts/bootstrap.js"></script>
	<script src="~/Scripts/jquery-3.3.1.min.js"></script>
</body>
</html>
